#!/bin/bash

case $newlang in
en_US)
  a_enter=' â‡¢  Press enter to continue'
  a_back=' â‡¢  RETURN'
  a_selection_fun=' â‡¢  Select an option:'
  ;;
esac

# variables
export _hora=$(printf '%(%H:%M:%S)T')
export _fecha=$(printf '%(%D)T')

export numero='^[0-9]+$'
export texto='^[A-Za-z]+$'
export txt_num='^[A-Za-z0-9]+$'

# ğŸ”¹color interfaces (custom palette)
#  red   -> purple
#  green -> orange
#  yellow-> light blue
#  white -> white
msg() {
   COLOR[0]='\033[1;37m'        # BRIGHT WHITE
   COLOR[1]='\e[95m'            # PURPLE (was RED)
   COLOR[2]='\e[1;38;5;208m'    # ORANGE (was GREEN)
   COLOR[3]='\e[94m'            # LIGHT BLUE (was YELLOW)
   COLOR[4]='\e[34m'            # DARK BLUE
   COLOR[5]='\e[95m'            # PURPLE / MAGENTA
   COLOR[6]='\033[1;97m'        # BRIGHT WHITE (for -nazu / -azu)
   COLOR[7]='\e[36m'            # TEAL / CYAN
   COLOR[8]='\e[30m'            # BLACK
   COLOR[9]='\033[1;94m'        # LIGHT BLUE (titles)

  NEGRITO='\e[1m'
  SEMCOR='\e[0m'

  case $1 in
  -ne)    cor="${COLOR[1]}${NEGRITO}" && echo -ne "${cor}${2}${SEMCOR}" ;;
  -nazu)  cor="${COLOR[6]}${NEGRITO}" && echo -ne "${cor}${2}${SEMCOR}" ;;
  -nverd) cor="${COLOR[2]}${NEGRITO}" && echo -ne "${cor}${2}${SEMCOR}" ;;  # ORANGE
  -nama)  cor="${COLOR[3]}${NEGRITO}" && echo -ne "${cor}${2}${SEMCOR}" ;;  # LIGHT BLUE
  -ama)   cor="${COLOR[3]}${NEGRITO}" && echo -e  "${cor}${2}${SEMCOR}" ;;  # LIGHT BLUE
  -verm)  cor="${COLOR[3]}${NEGRITO}[!] ${COLOR[1]}" && echo -e "${cor}${2}${SEMCOR}" ;;
  -verm2) cor="${COLOR[1]}${NEGRITO}" && echo -e  "${cor}${2}${SEMCOR}" ;;  # PURPLE
  -verm3) cor="${COLOR[1]}"            && echo -e  "${cor}${2}${SEMCOR}" ;;  # PURPLE
  -teal)  cor="${COLOR[7]}${NEGRITO}" && echo -e  "${cor}${2}${SEMCOR}" ;;
  -teal2) cor="${COLOR[7]}"           && echo -e  "${cor}${2}${SEMCOR}" ;;
  -blak)  cor="${COLOR[8]}${NEGRITO}" && echo -e  "${cor}${2}${SEMCOR}" ;;
  -blak2) cor="${COLOR[8]}"           && echo -e  "${cor}${2}${SEMCOR}" ;;
  -azu)   cor="${COLOR[6]}${NEGRITO}" && echo -e  "${cor}${2}${SEMCOR}" ;;
  -blu)   cor="${COLOR[9]}${NEGRITO}" && echo -e  "${cor}${2}${SEMCOR}" ;;
  -blu1)  cor="${COLOR[9]}"           && echo -e  "${cor}${2}${SEMCOR}" ;;
  -verd)  cor="${COLOR[2]}${NEGRITO}" && echo -e  "${cor}${2}${SEMCOR}" ;;  # ORANGE
  -bra)   cor="${COLOR[0]}${NEGRITO}" && echo -e  "${cor}${2}${SEMCOR}" ;;  # WHITE

  # boxes/borders now in PURPLE
  -bar)   cor="${COLOR[1]}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”" && echo -e "${SEMCOR}${cor}${SEMCOR}" ;;
  -bar0)  cor="${COLOR[1]}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜" && echo -e "${SEMCOR}${cor}${SEMCOR}" ;;
  -bar2)  cor="${COLOR[7]}==============================================="   && echo -e "${SEMCOR}${cor}${SEMCOR}" ;;
  -bar3)  cor="${COLOR[1]} â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"   && echo -e "${SEMCOR}${cor}${SEMCOR}" ;;
  -bar4)  cor="${COLOR[7]}-----------------------------------------------"   && echo -e "${SEMCOR}${cor}${SEMCOR}" ;;
  esac
}

# ğŸ”¹text centering
print_center() {
  if [[ -z $2 ]]; then
    text="$1"
  else
    col="$1"
    text="$2"
  fi

  while read line; do
    unset space
    x=$(((45 - ${#line}) / 2))
    for ((i = 0; i < $x; i++)); do
      space+=' '
    done
    space+="$line"
    if [[ -z $2 ]]; then
      msg -azu "$space"
    else
      msg "$col" "$space"
    fi
  done <<<"$(echo -e "$text")"
}

print_title() {
  if [[ -z $2 ]]; then
    text="$1"
  else
    col="$1"
    text="$2"
  fi

  while read line; do
    unset space
    x=$(((53 - ${#line}) / 2))
    for ((i = 0; i < $x; i++)); do
      space+=' '
    done
    space+="$line"
    if [[ -z $2 ]]; then
      msg -azu "$space"
    else
      msg "$col" "$space"
    fi
  done <<<"$(echo -e "$text")"
}

sub_title() {
  if [[ -z $2 ]]; then
    text="$1"
  else
    col="$1"
    text="$2"
  fi

  while read line; do
    unset space
    x=$(((54 - ${#line}) / 2))
    for ((i = 0; i < $x; i++)); do
      space+=' '
    done
    space+="$line"
    if [[ -z $2 ]]; then
      msg -azu "$space"
    else
      msg "$col" "$space"
    fi
  done <<<"$(echo -e "$text")"
}

# ğŸ”¹titles and headings
title() {
  clear
  msg -bar
  if [[ -z $2 ]]; then
    print_center -blu1 "$1"
  else
    print_center "$1" "$2"
  fi
  msg -bar0
}

main_title() {
  clear
  msg -bar
  if [[ -z $2 ]]; then
    print_title -blu1 "$1"
  else
    print_title "$1" "$2"
  fi
  msg -bar0
}

title_sub() {
  clear
  msg -bar
  if [[ -z $2 ]]; then
    sub_title -blu1 "$1"
  else
    sub_title "$1" "$2"
  fi
  msg -bar0
}

# completion of tasksğŸ”¹home
enter() {
  msg -bar
  text="â–ºâ–º ${a_enter:-Press enter to continue} â—„â—„"
  if [[ -z $1 ]]; then
    print_center -ama "$text"
  else
    print_center "$1" "$text"
  fi
  read
}

# option, return back/back
back() {
  msg -bar
  # background changed from red (41) to purple (45)
  echo -ne "$(msg -verd " [0]") $(msg -verm2 ">") " && msg -bra "\033[1;45m${a_back:-GO BACK}"
  msg -bar0
}

exit2home() {
  msg -bar
  echo -ne "$(msg -verd " [0]") $(msg -verm2 ">") " && msg -bra "\033[1;45m${a_back:-EXIT}"
  msg -bar0
}

inst() {
  print_center -verm2 "${a9:-â— Please goto Github and reinstall the tool}"
  print_center -verm2 "${a9:-â— Please goto Github and reinstall the tool}"
  print_center -verm2 "${a9:-â— Please goto Github and reinstall the tool}"
}

# menu maker (options 1, 2, 3,...)
menu_func() {
  local options=${#@}
  local array
  for ((num = 1; num <= $options; num++)); do
    echo -ne "$(msg -verd " [$num]") $(msg -verm2 ">") "
    array=(${!num})
    case ${array[0]} in
    # was: yellow [!] + green text
    "-vd") echo -e "\033[1;94m[!]\033[1;38;5;208m ${array[@]:1}" ;;  # blue [!] + orange text
    # was: yellow [!] + red text
    "-vm") echo -e "\033[1;94m[!]\033[1;95m ${array[@]:1}" ;;         # blue [!] + purple text
    "-fi") echo -e "${array[@]:2} ${array[1]}" ;;
    -bar | -bar2 | -bar3 | -bar4) echo -e "\033[1;37m${array[@]:1}\n$(msg ${array[0]})" ;;
    *) echo -e "\033[1;37m${array[@]}" ;;
    esac
  done
}

# ğŸ”¹Numerical selection option
selection_fun() {
  local selection="null"
  local range

  if [[ -z $2 ]]; then
    option=$1
    col="-nazu"
  else
    option=$2
    col=$1
  fi

  # Check if option is too large
  if (( option > 13 )); then
    echo " â‡¢ Option is too large. Please enter a smaller number."
    return 1
  fi

  # Initialize range array
  range=( $(seq 0 $option) )

  while true; do
    # Ask for selection
    a_selection_fun=" â‡¢  Enter your selection: "
    msg "$col" "${a_selection_fun} " >&2
    read selection

    # Check if input is within range
    if [[ $selection == [0-$option] ]]; then
      break
    fi

    # Handle invalid input
    echo "Invalid input, please enter a number between 0 and $option."
    tput cuu1 >&2 && tput dl1 >&2
  done

  echo "$selection"
}

in_option() {
  unset option
  if [[ -z $2 ]]; then
    msg -nazu " $1: " >&2
  else
    msg $1 " $2: " >&2
  fi
  read option
  echo "$option"
}

in_option_down() {
  dat=$1
  length=${#dat}
  cal=$((22 - length / 2))
  line=''
  for ((i = 0; i < cal; i++)); do
    line+='â•¼'
  done
  echo -e " $(msg -verm3 "â•­$lineâ•¼[")$(msg -azu "$dat")$(msg -verm3 "]")"
  echo -ne " $(msg -verm3 "â•°â•¼")\033[37;1m> " && read option
}

del() {
  for ((i = 0; i < $1; i++)); do
    tput cuu1 && tput dl1
  done
}

export -f msg
export -f selection_fun
export -f menu_func
export -f print_center
export -f title
export -f back
export -f inst
export -f enter
export -f in_option
export -f in_option_down
export -f del
export -f exit2home
